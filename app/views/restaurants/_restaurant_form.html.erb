      <%= simple_form_for(@restaurant) do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :city %>
        <%= f.input :phone_number %>
        <%= f.input :category, collection: Restaurant::CATEGORY, as: :radio_buttons %>
        <%= f.submit class: 'btn btn-success' %>
        <%= link_to "Back", root_path %>
      <% end %>
